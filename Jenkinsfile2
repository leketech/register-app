pipeline {
    agent { label 'J-Agent' }
    tools {
        jdk 'Java17'
       maven 'Maven3'
    }
    stages{
        stages("Cleanup Workspace"){
                 steps {
             cleanWs()
             }
      }

      stage("Checkout from SCM"){
              steps {
                  git branch: 'main', credentials: 'github', url: 'https://github.com/leketech/register-app'
              }
        }

        stage("Build Application"){
            steps {
                sh "mvn clean package"
             }

        }
      
        stage("Test Application"){
            steps {
                  sh "mvn test"
           }
       }
    }
}
